<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.github.kronen</groupId>
    <artifactId>cellardoor-bom</artifactId>
    <version>0.3.0</version>
    <relativePath/>
  </parent>

  <artifactId>cellardoor-allocation</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>cellardoor-allocation</name>
  <description>Allocation Microservice for Cellardoor project</description>

  <modules>
    <module>boot</module>
    <module>api-rest</module>
    <module>infrastructure</module>
    <module>domain</module>
  </modules>

  <properties>
    <openapi-generator.version>7.0.1</openapi-generator.version>
    <mongodb-test-containers.version>1.19.1</mongodb-test-containers.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.testcontainers</groupId>
        <artifactId>mongodb</artifactId>
        <version>${mongodb-test-containers.version}</version>
        <scope>test</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>com.diffplug.spotless</groupId>
        <artifactId>spotless-maven-plugin</artifactId>
        <version>2.43.0</version>
        <executions>
          <execution>
            <goals>
              <goal>check</goal>
            </goals>
            <phase>validate</phase>
          </execution>
        </executions>
        <configuration>
          <java>
            <includes>
              <include>src/main/java/**/*.java</include>
              <include>src/test/java/**/*.java</include>
            </includes>
            <cleanthat/>
            <palantirJavaFormat>
              <version>2.39.0</version>
              <style>PALANTIR</style>
              <formatJavadoc>false</formatJavadoc>
            </palantirJavaFormat>
            <importOrder>
              <wildcardsLast>false</wildcardsLast>
              <order>java|javax,org,com,com.diffplug,,#com.diffplug,#</order>
              <semanticSort>false</semanticSort>
              <treatAsPackage>
                <package>com.example.MyPackage</package>
              </treatAsPackage>
              <treatAsClass>
                <class>com.example.myClass</class>
              </treatAsClass>
            </importOrder>
            <removeUnusedImports/>
            <formatAnnotations/>
            <toggleOffOn/>
          </java>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
